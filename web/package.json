{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "routify -c dev-vite",
    "dev:windows": "npm run open & routify -c dev-vite ",
    "build": "routify -b && vite build && npm run brotli:dist",
    "dev-vite": "vite",
    "serve-vite": "vite preview",
    "brotli:dist": "node br.cjs",
    "open": "start http://localhost:3000",
    "validate": "eslint --fix src",
    "format": "prettier --plugin-search-dir=. -w src",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests src",
    "test:watch": "npm t -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@jest/globals": "^26.6.2",
    "@rollup/plugin-typescript": "^8.2.0",
    "@roxi/routify": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.5",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/brotli": "^1.3.0",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "@types/jest": "^26.0.22",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "brotli": "^1.3.2",
    "eslint": "^7.22.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-svelte3": "^3.1.2",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "jest": "^27.0.0-next.6",
    "open": "^8.0.4",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.35.0",
    "svelte-check": "^1.3.0",
    "svelte-jester": "^1.3.2",
    "svelte-preprocess": "^4.7.0",
    "tailwindcss": "^2.0.4",
    "ts-jest": "^27.0.0-next.9",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "vite": "^2.1.3",
    "vite-plugin-windicss": "^0.10.2",
    "windicss": "^2.5.5"
  },
  "dependencies": {
    "renderless-svelte": "^1.5.0"
  },
  "type": "module",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": "svelte.config.cjs"
        }
      ],
      "^.+\\.[jt]s$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
